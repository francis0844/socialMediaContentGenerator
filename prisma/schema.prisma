generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MembershipRole {
  OWNER
  MEMBER
}

enum AccountPlan {
  full_access
}

enum BillingStatus {
  trialing
  active
  past_due
  canceled
  incomplete
  unpaid
}

enum ContentType {
  graphic
  story
  text
  video
}

enum SocialPlatform {
  facebook
  instagram
  pinterest
  x
}

enum ContentStatus {
  generated
  accepted
  rejected
}

enum FeedbackDecision {
  accept
  reject
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String?
  name         String?
  image        String?
  emailVerified DateTime?
  createdAt    DateTime   @default(now())

  memberships Membership[]
  oauthAccounts OAuthAccount[]
  verificationTokens EmailVerificationToken[]
}

model OAuthAccount {
  id                String   @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                    String        @id @default(cuid())
  name                  String
  plan                  AccountPlan   @default(full_access)
  billingCustomerId     String?
  billingSubscriptionId String?
  billingStatus         BillingStatus @default(trialing)
  billingPeriodStart    DateTime?
  billingPeriodEnd      DateTime?
  trialEndsAt           DateTime?
  createdAt             DateTime      @default(now())

  memberships        Membership[]
  brandProfile       BrandProfile?
  generationRequests GenerationRequest[]
  generatedContent   GeneratedContent[]
  feedback           Feedback[]
  aiMemory           AiMemory?

  @@index([billingCustomerId])
  @@index([billingSubscriptionId])
  @@index([billingPeriodStart])
  @@index([billingPeriodEnd])
}

model Membership {
  userId    String
  accountId String
  role      MembershipRole @default(OWNER)
  createdAt DateTime       @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@id([userId, accountId])
  @@index([accountId])
}

model BrandProfile {
  id             String   @id @default(cuid())
  accountId      String   @unique
  brandName      String
  logoUrl        String?
  about          String
  niche          String
  colorsJson     Json?
  targetAudience String?
  goals          String?
  voiceMode      String?
  voiceDocUrl    String?
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model GenerationRequest {
  id          String         @id @default(cuid())
  accountId   String
  contentType ContentType
  platform    SocialPlatform
  direction   Json
  createdAt   DateTime       @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  outputs GeneratedContent[]

  @@index([accountId, createdAt])
  @@index([accountId, contentType, platform, createdAt])
}

model GeneratedContent {
  id        String        @id @default(cuid())
  accountId String
  requestId String
  title     String?
  output    Json
  caption   String?
  hashtags  Json?
  status    ContentStatus @default(generated)
  createdAt DateTime      @default(now())

  account  Account           @relation(fields: [accountId], references: [id], onDelete: Cascade)
  request  GenerationRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  feedback Feedback[]

  @@index([accountId, status, createdAt])
  @@index([requestId])
}

model Feedback {
  id             String           @id @default(cuid())
  contentId      String
  accountId      String
  decision       FeedbackDecision
  reason         String
  aiResponse     String
  memorySnapshot String?
  createdAt      DateTime         @default(now())

  account Account          @relation(fields: [accountId], references: [id], onDelete: Cascade)
  content GeneratedContent @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@index([accountId, createdAt])
  @@index([contentId])
}

model AiMemory {
  id            String   @id @default(cuid())
  accountId     String   @unique
  threadId      String?
  memorySummary String   @default("")
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}
