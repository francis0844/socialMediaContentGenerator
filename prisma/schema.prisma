generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum MembershipRole {
  OWNER
  MEMBER
}

enum AccountPlan {
  full_access
}

enum BillingStatus {
  trialing
  active
  past_due
  canceled
  incomplete
  unpaid
}

enum ContentType {
  graphic
  story
  text
  video
}

enum SocialPlatform {
  facebook
  instagram
  pinterest
  x
}

enum ContentStatus {
  generated
  accepted
  rejected
}

enum ImageStatus {
  none
  generating
  ready
  failed
}

enum FeedbackDecision {
  accept
  reject
}

enum BrandVoiceMode {
  preset
  uploaded
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String?
  name         String?
  image        String?
  emailVerified DateTime?
  createdAt    DateTime   @default(now())

  memberships Membership[]
  oauthAccounts OAuthAccount[]
  verificationTokens EmailVerificationToken[]
}

model OAuthAccount {
  id                String   @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                    String        @id @default(cuid())
  name                  String
  plan                  AccountPlan   @default(full_access)
  billingCustomerId     String?
  billingSubscriptionId String?
  billingStatus         BillingStatus @default(trialing)
  billingPeriodStart    DateTime?
  billingPeriodEnd      DateTime?
  trialEndsAt           DateTime?
  memorySummary         String        @default("")
  createdAt             DateTime      @default(now())

  memberships        Membership[]
  brandProfile       BrandProfile?
  generationRequests GenerationRequest[]
  generatedContent   GeneratedContent[]
  feedback           Feedback[]
  aiMemory           AiMemory?
  mediaAssets        MediaAsset[]
  uploadedImageReferences UploadedImageReference[]
  imageJobs          ImageJob[]

  @@index([billingCustomerId])
  @@index([billingSubscriptionId])
  @@index([billingPeriodStart])
  @@index([billingPeriodEnd])
}

model Membership {
  userId    String
  accountId String
  role      MembershipRole @default(OWNER)
  createdAt DateTime       @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@id([userId, accountId])
  @@index([accountId])
}

model BrandProfile {
  id             String   @id @default(cuid())
  accountId      String   @unique
  brandName      String
  logoUrl        String?
  about          String
  niche          String
  colorsJson     Json?
  targetAudience String   @default("")
  goals          String   @default("")
  voiceMode      BrandVoiceMode @default(preset)
  voicePreset    String?
  voiceDocUrl    String?
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model GenerationRequest {
  id          String         @id @default(cuid())
  accountId   String
  contentType ContentType
  platform    SocialPlatform
  direction   Json
  createdAt   DateTime       @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  outputs GeneratedContent[]

  @@index([accountId, createdAt])
  @@index([accountId, contentType, platform, createdAt])
}

model GeneratedContent {
  id              String        @id @default(cuid())
  accountId       String
  requestId       String
  title           String?
  output          Json
  caption         String?
  hashtags        Json?
  status          ContentStatus @default(generated)
  imageStatus     ImageStatus   @default(none)
  imageUrl        String?
  imageModel      String?
  imagePrompt     String?
  imageAspectRatio String?      @default("1:1")
  imageVariantsRequested Int     @default(1)
  imageError      String?
  imageModelId    String?
  primaryImageAssetId String?
  createdAt       DateTime      @default(now())

  account  Account           @relation(fields: [accountId], references: [id], onDelete: Cascade)
  request  GenerationRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  primaryImageAsset MediaAsset? @relation("PrimaryGeneratedImage", fields: [primaryImageAssetId], references: [id])
  feedback Feedback[]
  imageJobs ImageJob[]

  @@index([accountId, status, createdAt])
  @@index([requestId])
}

enum MediaAssetType {
  LOGO
  PRODUCT_MOCKUP
  STYLE_MIMIC
  GENERATED_IMAGE
}

enum StorageProvider {
  CLOUDINARY
  S3
}

enum UploadedImageKind {
  PRODUCT_MOCKUP
  STYLE_MIMIC
  LOGO_OVERRIDE
}

model MediaAsset {
  id               String          @id @default(uuid())
  accountId        String
  type             MediaAssetType
  storageProvider  StorageProvider
  url              String
  thumbnailUrl     String?
  mimeType         String
  width            Int?
  height           Int?
  createdAt        DateTime        @default(now())

  account          Account         @relation(fields: [accountId], references: [id], onDelete: Cascade)
  uploadedReferences UploadedImageReference[]
  generatedContents GeneratedContent[] @relation("PrimaryGeneratedImage")

  @@index([accountId, type, createdAt])
}

model UploadedImageReference {
  id           String            @id @default(uuid())
  accountId    String
  mediaAssetId String
  label        String
  kind         UploadedImageKind
  createdAt    DateTime          @default(now())

  account    Account    @relation(fields: [accountId], references: [id], onDelete: Cascade)
  mediaAsset MediaAsset @relation(fields: [mediaAssetId], references: [id], onDelete: Cascade)

  @@index([accountId, kind, createdAt])
  @@index([mediaAssetId])
}

enum ImageJobStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

model ImageJob {
  id                 String           @id @default(uuid())
  accountId          String
  generatedContentId String
  status             ImageJobStatus   @default(QUEUED)
  attempts           Int              @default(0)
  lastError          String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  account           Account          @relation(fields: [accountId], references: [id], onDelete: Cascade)
  generatedContent  GeneratedContent @relation(fields: [generatedContentId], references: [id], onDelete: Cascade)

  @@index([accountId, status, createdAt])
  @@index([generatedContentId])
}

model Feedback {
  id             String           @id @default(cuid())
  contentId      String
  accountId      String
  decision       FeedbackDecision
  reason         String
  aiResponse     String
  previousMemorySnapshot String?
  memorySnapshot String?
  undoneAt       DateTime?
  undoReason     String?
  createdAt      DateTime         @default(now())

  account Account          @relation(fields: [accountId], references: [id], onDelete: Cascade)
  content GeneratedContent @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@index([accountId, createdAt])
  @@index([contentId])
}

model AiMemory {
  id            String   @id @default(cuid())
  accountId     String   @unique
  threadId      String?
  memorySummary String   @default("")
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}
